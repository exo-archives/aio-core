<?xml version="1.0" encoding="ISO-8859-1"?>
<configuration>
  <component>
    <key>XAPoolStandardDBConnectionService</key>
    <type>org.exoplatform.services.database.impl.XAPoolStandardDatabaseService</type>
    <description>simple  db connection pool implementation</description>

    <init-params>
      <properties-param>
        <name>connection.config</name>
        <description>Connection configuration</description>
        <property name='connection.driver' value='org.hsqldb.jdbcDriver'/>
        <property name='connection.url' value='jdbc:hsqldb:mem:db/data'/>
        <property name='connection.login' value='sa'/>
        <property name='connection.password' value=''/>
        <property name='connection.min-size' value='3'/>
        <property name='connection.max-size' value='5'/>
      </properties-param>
    </init-params>
  </component>

  <component>
    <key>XAPoolTxSupportDBConnectionService</key>
    <type>org.exoplatform.services.database.impl.XAPoolTxSupportDatabaseService</type>
    <description>support the transaction  db connection pool implementation</description>

    <init-params>
      <properties-param>
        <name>connection.config</name>
        <description>Connection configuration</description>
        <property name='connection.driver' value='org.hsqldb.jdbcDriver'/>
        <property name='connection.url' value='jdbc:hsqldb:mem:db/txdata'/>
        <property name='connection.login' value='sa'/>
        <property name='connection.password' value=''/>
        <property name='connection.min-size' value='3'/>
        <property name='connection.max-size' value='5'/>
      </properties-param>
    </init-params>
  </component> 
</configuration>
