<?xml version="1.0" encoding="ISO-8859-1"?>
<configuration>
  <component>
    <key>org.exoplatform.services.naming.NamingService</key>
    <type>org.exoplatform.services.naming.NamingService</type>
    <init-params>
      <properties-param>
        <name>environment</name>
        <description>the  environment  properties</description>
        <property name='java.naming.factory.initial' value='org.apache.naming.java.javaURLContextFactory'/>
        <property name='java.naming.factory.url.pkgs' value='org.apache.naming'/>
      </properties-param>
    </init-params>
  </component>

  <component>
    <key>org.exoplatform.services.transaction.TransactionService</key>
    <type>org.exoplatform.services.transaction.impl.NoTransactionServiceImpl</type>
  </component>

  <component>
    <key>org.exoplatform.services.transaction.ExoTransactionService</key>
    <type>org.exoplatform.services.transaction.impl.ExoTransactionServiceImpl</type>
    <component-plugins>
      <component-plugin>
        <name>transaction.plugin.jotm</name>
        <set-method>setTransactionPlugin</set-method>
        <type>org.exoplatform.services.transaction.impl.JOTMTransactionPlugin</type>
        <description>JOTM Transaction Plugin</description>
      </component-plugin>
    </component-plugins>
  </component>
</configuration>
